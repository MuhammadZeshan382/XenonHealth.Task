@{
}
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model ImageInputDTO



<form asp-controller="Image" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ImageName">Name</label>
        <input asp-for="ImageName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ImageFile">Image</label>
        <input type="file" asp-for="ImageFile" class="form-control-file" accept="image/png,image/jpeg" />

    </div>
    <button type="submit" class="btn btn-primary">Save</button>

    @if (TempData["issaved"] != null && (bool)TempData["issaved"])
    {
        <div class="m-5 alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sucess!</strong> Your image is saved ! <span><a asp-action="ViewImage" asp-controller="Image" asp-route-id="@TempData["ID"]?.ToString()" class="btn-link">View here.</a></span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(TempData["message"]?.ToString()))
    {
        <div class="m-5 alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["message"]?.ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

</form>